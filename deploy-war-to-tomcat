node{
   stage('SCM Checkout'){
     git 'https://github.com/Amarraji/my-app'
   }
   stage('Compile-Package'){
      // Get maven home path
      def mvnHome =  tool name: 'maven-3', type: 'maven'   
      sh "${mvnHome}/bin/mvn package"
   }
   stage('Deploy to Tomcat'){
      
      sshagent(['tomcat-dev']) {
         sh 'scp -o StrictHostKeyChecking=no target/*.war root@128.199.29.111:/opt/apache-tomcat-9.0.46/webapps/'
      }
   }
}
